	margin: 0;
	padding: 0;
	overflow: hidden;
	background-color: #2BC1F2;
	}

	li.navli{
	float: left;
	}

	li.navli a {
	display: block;
	text-align: center;
	padding: 14px 16px;
	text-decoration: none;
	border-right: 1px solid black;
	font-family:'Ubuntu',sans-serif;
	text-align:center;
	
	}

	/* Change the link color to #111 (black) on hover */
